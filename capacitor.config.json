{
  "appId": "com.galaxywatch.heartrate",
  "appName": "Galaxy Watch Heart Rate",
  "webDir": "www",
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#1a1a1a",
      "showSpinner": false,
      "androidSpinnerStyle": "small",
      "iosSpinnerStyle": "small",
      "spinnerColor": "#ff4757"
    },
    "StatusBar": {
      "style": "Dark",
      "backgroundColor": "#1a1a1a"
    }
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true
  }
}
